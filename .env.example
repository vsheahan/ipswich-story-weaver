# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ipswich_stories
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/ipswich_stories

# Application
DEBUG=true
ENVIRONMENT=development

# Weather API (OpenWeatherMap)
# Get your API key at: https://openweathermap.org/api
WEATHER_API_KEY=your_api_key_here

# LLM API (Anthropic Claude)
# Get your API key at: https://console.anthropic.com/
# Required for literary story generation in New England nature writing style
ANTHROPIC_API_KEY=your_api_key_here
LLM_MODEL=claude-sonnet-4-20250514
USE_LLM_FOR_STORIES=true

# Feature Flags
ENABLE_STORY_REGEN_ENDPOINT=true
ENABLE_MANUAL_GENERATION=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
